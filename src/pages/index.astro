---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogSidebar from '../components/BlogSidebar.astro';
import CarouselCard from '../components/CarouselCard.astro';
import CarouselSection from '../components/CarouselSection.astro';
import { projects } from '../data/projects';
import { getPublishedPosts } from '../lib/posts';
import { translateCategory } from '../lib/utils';
import { base, assetPath, getSiteSettings, getCategoryI18n } from '../lib/config';

const catI18n = getCategoryI18n();
const siteSettings = getSiteSettings();

const posts = (await getPublishedPosts()).slice(0, 8);
---

<BaseLayout title={siteSettings.name} fullBanner={true}>
  <!-- Hero Banner (full width, no animation) -->
  <section class="hero-banner mb-16 sm:mb-24">
    <div class="hero-banner-inner">
      {siteSettings.bannerImage ? (
        <img src={assetPath(siteSettings.bannerImage)} alt="Banner" class="hero-banner-img" />
      ) : (
        <div class="hero-banner-fallback"></div>
      )}
      <div class="hero-banner-overlay-top"></div>
      <div class="hero-banner-overlay"></div>
      <div class="hero-banner-content">
      </div>
    </div>
  </section>

  <div class="fade-in-up">
    <!-- Layout: sidebar floats outside, content fills header width -->
    <div class="relative">
      <div class="floating-sidebar hidden xl:block">
        <BlogSidebar />
      </div>

    <!-- 프로젝트 -->
    <CarouselSection id="projects" titleKo="프로젝트" titleEn="Projects" viewAllHref={`${base}/projects`} large>
      {projects.map((project) => (
        <CarouselCard
          href={project.website || project.github || (project.story ? `${base}${project.story}` : '') || `${base}/projects`}
          title={project.title}
          titleEn={project.titleEn}
          description={project.description}
          descriptionEn={project.descriptionEn}
          image={project.image ? assetPath(project.image) : undefined}
          date={project.date}
          category={project.category}
          website={project.website}
          github={project.github}
          story={project.story ? `${base}${project.story}` : ''}
        />
      ))}
    </CarouselSection>

    <!-- 최신 스토리 -->
    <CarouselSection id="stories" titleKo="최신 스토리" titleEn="Latest Story" viewAllHref={`${base}/blog`} large>
      {posts.map((post) => (
        <CarouselCard
          href={`${base}/blog/${post.id}`}
          title={post.data.title}
          titleEn={post.data.titleEn}
          description={post.data.description}
          descriptionEn={post.data.descriptionEn}
          image={post.data.coverImage ? assetPath(post.data.coverImage) : undefined}
          date={post.data.date.toLocaleDateString('ko-KR', { year: 'numeric', month: 'short', day: 'numeric' })}
          dateEn={post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
          category={post.data.category}
          categoryEn={translateCategory(post.data.category, catI18n)}
        />
      ))}
    </CarouselSection>

    </div>
  </div>
</BaseLayout>

<style>
  @keyframes wave {
    0%, 100% { transform: rotate(0deg); }
    15% { transform: rotate(14deg); }
    30% { transform: rotate(-8deg); }
    40% { transform: rotate(14deg); }
    50% { transform: rotate(-4deg); }
    60% { transform: rotate(10deg); }
    70% { transform: rotate(0deg); }
  }

  /* Full-width hero banner */
  .hero-banner {
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    width: 100vw;
  }

  .hero-banner-inner {
    position: relative;
    height: 520px;
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .hero-banner-inner { height: 640px; }
  }

  @media (min-width: 768px) {
    .hero-banner-inner { height: 720px; }
  }

  @media (min-width: 1024px) {
    .hero-banner-inner { height: 800px; }
  }

  .hero-banner-img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: fill;
    object-position: center;
  }

  .hero-banner-fallback {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(135deg,
        #1a1040 0%,
        #2d1b69 25%,
        #1e1145 50%,
        #0f1729 75%,
        #0a0e1a 100%
      );
  }

  .hero-banner-fallback::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 60% 50% at 20% 50%, rgba(56, 189, 248, 0.3) 0%, transparent 70%),
      radial-gradient(ellipse 50% 60% at 80% 40%, rgba(6, 182, 212, 0.25) 0%, transparent 70%),
      radial-gradient(ellipse 40% 40% at 50% 80%, rgba(244, 114, 182, 0.15) 0%, transparent 70%);
    animation: banner-glow 8s ease-in-out infinite alternate;
  }

  .hero-banner-fallback::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(255, 255, 255, 0.08) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.4;
  }

  @keyframes banner-glow {
    0% { opacity: 1; }
    100% { opacity: 0.7; transform: scale(1.05); }
  }

  .hero-banner-overlay-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 40%;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.45) 0%, rgba(0, 0, 0, 0.15) 50%, transparent 100%);
    pointer-events: none;
    z-index: 1;
  }

  .hero-banner-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 70%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.3) 50%, transparent 100%);
    pointer-events: none;
  }

  .hero-banner-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding-bottom: 2rem;
  }

  @media (min-width: 640px) {
    .hero-banner-content { padding-bottom: 2.5rem; }
  }

  @media (min-width: 768px) {
    .hero-banner-content { padding-bottom: 3rem; }
  }

  /* Floating sidebar (outside content area) */
  .floating-sidebar {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 100%;
    margin-right: 2rem;
    width: 13rem;
  }

  @media (min-width: 1536px) {
    .floating-sidebar {
      margin-right: 2.5rem;
    }
  }


</style>
