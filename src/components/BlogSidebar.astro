---
import { getCollection } from 'astro:content';
import { buildCategoryTree, categoryIconPaths, defaultIconPath } from '../lib/utils';
import fs from 'node:fs';
import path from 'node:path';

const allPosts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const categoryTree = buildCategoryTree(allPosts.map((p) => p.data.category));
const sortedParents = [...categoryTree.entries()].sort((a, b) => b[1].count - a[1].count);

const tagMap = new Map<string, number>();
allPosts.forEach((post) => {
  post.data.tags.forEach((tag) => {
    tagMap.set(tag, (tagMap.get(tag) || 0) + 1);
  });
});
const topTags = [...tagMap.entries()].sort((a, b) => b[1] - a[1]).slice(0, 8);

const tagColors = ['tag-violet', 'tag-cyan', 'tag-rose', 'tag-emerald', 'tag-amber', 'tag-violet', 'tag-cyan', 'tag-rose'];

// Load site settings + category icons from JSON
const settingsPath = path.join(process.cwd(), 'src/data/site/settings.json');
const siteSettings = JSON.parse(fs.readFileSync(settingsPath, 'utf-8'));

const catDir = path.join(process.cwd(), 'src/data/categories');
const catIconMap = new Map<string, string>();
try {
  for (const file of fs.readdirSync(catDir).filter(f => f.endsWith('.json'))) {
    const data = JSON.parse(fs.readFileSync(path.join(catDir, file), 'utf-8'));
    catIconMap.set(data.name, categoryIconPaths[data.icon] || defaultIconPath);
  }
} catch {}

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<aside class="hidden lg:block lg:w-52 shrink-0">
  <div class="sticky top-24 space-y-5">
    <!-- Profile card -->
    <div class="glass-sidebar p-5">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 rounded-2xl shadow-lg shadow-primary/20 relative overflow-hidden">
          <img src={`${base}/favicon-light.svg`} alt="" class="w-full h-full object-cover absolute inset-0 block dark:hidden" />
          <img src={`${base}/favicon-dark.svg`} alt="" class="w-full h-full object-cover absolute inset-0 hidden dark:block" />
        </div>
        <div>
          <div class="text-[14px] font-semibold">{siteSettings.name}</div>
        </div>
      </div>
      <p class="text-[12px] text-gray-500 dark:text-gray-400 leading-relaxed" data-ko={siteSettings.description} data-en={siteSettings.descriptionEn}>
        {siteSettings.description}
      </p>
    </div>

    <!-- Categories -->
    <div class="glass-sidebar p-4">
      <div class="flex items-center gap-2 px-2 mb-3">
        <svg class="w-3.5 h-3.5 text-primary/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
        </svg>
        <span class="text-[11px] font-semibold tracking-wider uppercase text-gray-400 dark:text-gray-500">Categories</span>
      </div>
      <nav class="space-y-0.5">
        <a href={`${base}/blog`} class="sidebar-link active">
          <svg class="w-4 h-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <span data-ko="전체" data-en="All">전체</span>
          <span class="sidebar-count">{allPosts.length}</span>
        </a>
        {sortedParents.map(([parent, node]) => (
          <div class="sidebar-group">
            <a href={`${base}/categories/${encodeURIComponent(parent)}`} class="sidebar-link">
              <svg class="w-4 h-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={catIconMap.get(parent) || defaultIconPath} />
              </svg>
              <span>{parent}</span>
              <span class="sidebar-count">{node.count}</span>
            </a>
            {node.children.size > 0 && (
              <div class="sidebar-children">
                {[...node.children.entries()]
                  .sort((a, b) => b[1].count - a[1].count)
                  .map(([child, childNode]) => (
                    <a href={`${base}/categories/${encodeURIComponent(parent)}/${encodeURIComponent(child)}`} class="sidebar-child-link">
                      <span class="sidebar-child-dot"></span>
                      <span>{child}</span>
                      <span class="sidebar-count">{childNode.count}</span>
                    </a>
                  ))}
              </div>
            )}
          </div>
        ))}
      </nav>
    </div>

    <!-- Tags -->
    <div class="glass-sidebar p-4">
      <div class="flex items-center gap-2 px-2 mb-3">
        <svg class="w-3.5 h-3.5 text-primary/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
        <span class="text-[11px] font-semibold tracking-wider uppercase text-gray-400 dark:text-gray-500">Tags</span>
      </div>
      <div class="flex flex-wrap gap-1.5 px-1">
        {topTags.map(([tag, count], i) => (
          <a
            href={`${base}/tags/${encodeURIComponent(tag)}`}
            class:list={['tag-pill text-[11px]', tagColors[i % tagColors.length]]}
          >
            {tag}
          </a>
        ))}
        {tagMap.size > 8 && (
          <a href={`${base}/tags`} class="text-[11px] text-gray-400 hover:text-primary transition-colors px-2 py-1">
            +{tagMap.size - 8} more
          </a>
        )}
      </div>
    </div>
  </div>
</aside>
