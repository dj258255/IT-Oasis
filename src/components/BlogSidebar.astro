---
import { buildCategoryTree, defaultIconPath, parseCategory } from '../lib/utils';
import { base, getSiteSettings, getCategoryI18n, getCategoryMeta, getSubcategoryOrder, getCategoryDisplayKo } from '../lib/config';
import { TAG_COLORS } from '../lib/constants';
import { getPublishedPosts } from '../lib/posts';

interface Props {
  activeCategory?: string;
}

const { activeCategory } = Astro.props;
const activeParsed = activeCategory ? parseCategory(activeCategory) : null;

const allPosts = await getPublishedPosts();

const categoryTree = buildCategoryTree(allPosts.map((p) => p.data.category));
const catMeta = getCategoryMeta();
const sortedParents = [...categoryTree.entries()].sort((a, b) => {
  const orderA = catMeta.get(a[0])?.order ?? 999;
  const orderB = catMeta.get(b[0])?.order ?? 999;
  return orderA - orderB;
});

const tagMap = new Map<string, number>();
allPosts.forEach((post) => {
  post.data.tags.forEach((tag) => {
    tagMap.set(tag, (tagMap.get(tag) || 0) + 1);
  });
});
const topTags = [...tagMap.entries()].sort((a, b) => b[1] - a[1]).slice(0, 8);

const siteSettings = getSiteSettings();
const catIconMap = new Map([...catMeta.entries()].map(([k, v]) => [k, v.icon]));
const catI18n = getCategoryI18n();
const subCatOrder = getSubcategoryOrder();
const catDisplayKo = getCategoryDisplayKo();
---

<aside class="hidden lg:block lg:w-52 shrink-0 h-full">
  <div class="sticky top-24 space-y-5 sidebar-scroll">
    <!-- Profile card -->
    <div class="glass-sidebar p-5">
      <div class="flex items-center gap-3 mb-4">
        <div class="w-10 h-10 rounded-2xl shadow-lg shadow-primary/20 relative overflow-hidden">
          <img src={`${base}/favicon-light.svg`} alt="" class="w-full h-full object-cover absolute inset-0 block dark:hidden" />
          <img src={`${base}/favicon-dark.svg`} alt="" class="w-full h-full object-cover absolute inset-0 hidden dark:block" />
        </div>
        <div class="flex items-center gap-1.5">
          <div class="text-[15px] font-semibold">{siteSettings.name}</div>
          <a
            href="https://github.com"
            target="_blank"
            rel="noopener"
            class="text-gray-500 hover:text-primary dark:text-gray-400 dark:hover:text-primary-light transition-all duration-300 hover:scale-110"
          >
            <svg class="w-[14px] h-[14px]" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
      <p class="text-[13px] text-gray-600 dark:text-gray-300 leading-relaxed whitespace-pre-line" data-ko={siteSettings.description} data-en={siteSettings.descriptionEn}>
        {siteSettings.description}
      </p>
    </div>

    <!-- Categories -->
    <div class="glass-sidebar p-4">
      <div class="flex items-center gap-2 px-2 mb-3">
        <svg class="w-3.5 h-3.5 text-primary/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
        </svg>
        <span class="text-[12px] font-semibold tracking-wider uppercase text-gray-500 dark:text-gray-400">Categories</span>
      </div>
      <nav class="space-y-0.5">
        <a href={`${base}/blog`} class:list={['sidebar-link', !activeCategory && 'active']}>
          <svg class="w-4 h-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <span data-ko="전체" data-en="All">전체</span>
          <span class="sidebar-count">{allPosts.length}</span>
        </a>
        {sortedParents.map(([parent, node]) => (
          <div class="sidebar-group">
            <a href={`${base}/categories/${encodeURIComponent(parent)}`} class:list={['sidebar-link', activeParsed && activeParsed.parent === parent && !activeParsed.child && 'active']}>
              <svg class="w-4 h-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={catIconMap.get(parent) || defaultIconPath} />
              </svg>
              <span data-ko={catDisplayKo.get(parent) || parent} data-en={catI18n.get(parent) || parent}>{catDisplayKo.get(parent) || parent}</span>
              <span class="sidebar-count">{node.count}</span>
            </a>
            {node.children.size > 0 && (
              <div class="sidebar-children">
                {[...node.children.entries()]
                  .sort((a, b) => (subCatOrder.get(`${parent}/${a[0]}`) ?? 999) - (subCatOrder.get(`${parent}/${b[0]}`) ?? 999))
                  .map(([child, childNode]) => (
                    <a href={`${base}/categories/${encodeURIComponent(parent)}/${encodeURIComponent(child)}`} class:list={['sidebar-child-link', activeParsed && activeParsed.parent === parent && activeParsed.child === child && 'active']}>
                      <span class="sidebar-child-dot"></span>
                      <span data-ko={catDisplayKo.get(child) || child} data-en={catI18n.get(child) || child}>{catDisplayKo.get(child) || child}</span>
                      <span class="sidebar-count">{childNode.count}</span>
                    </a>
                  ))}
              </div>
            )}
          </div>
        ))}
      </nav>
    </div>

    <!-- Tags -->
    <div class="glass-sidebar p-4">
      <div class="flex items-center gap-2 px-2 mb-3">
        <svg class="w-3.5 h-3.5 text-primary/60" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
        </svg>
        <span class="text-[12px] font-semibold tracking-wider uppercase text-gray-500 dark:text-gray-400">Tags</span>
      </div>
      <div class="flex flex-wrap gap-1.5 px-1">
        {topTags.map(([tag, count], i) => (
          <a
            href={`${base}/tags/${encodeURIComponent(tag)}`}
            class:list={['tag-pill text-[12px]', TAG_COLORS[i % TAG_COLORS.length]]}
          >
            {tag}
          </a>
        ))}
        {tagMap.size > 8 && (
          <a href={`${base}/tags`} class="text-[12px] text-gray-500 dark:text-gray-400 hover:text-primary transition-colors px-2 py-1 font-medium">
            +{tagMap.size - 8} more
          </a>
        )}
      </div>
    </div>
  </div>
</aside>
