---
import fs from 'node:fs';
import path from 'node:path';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const assetPath = (p: string) => `${base}/${p.replace(/^\//, '')}`;

const siteSettings = JSON.parse(fs.readFileSync(path.join(process.cwd(), 'src/data/site/settings.json'), 'utf-8'));
---

<div class="author-card">
  <div class="flex flex-col sm:flex-row items-center sm:items-start gap-6 sm:gap-8 p-6 sm:p-8 md:p-10">
    <div class="w-28 h-28 sm:w-32 sm:h-32 rounded-full overflow-hidden shrink-0 bg-gradient-to-br from-primary/20 via-accent/15 to-rose/20">
      {siteSettings.authorImage ? (
        <img src={assetPath(siteSettings.authorImage)} alt="Author" class="w-full h-full object-cover object-top" />
      ) : (
        <>
          <img src={`${base}/favicon-light.svg`} alt="Author" class="w-full h-full object-cover p-4 block dark:hidden" />
          <img src={`${base}/favicon-dark.svg`} alt="Author" class="w-full h-full object-cover p-4 hidden dark:block" />
        </>
      )}
    </div>
    <div class="flex-1 min-w-0 text-center sm:text-left">
      <div class="flex items-center justify-center sm:justify-start gap-2.5 mb-3">
        <span class="text-[12px] sm:text-[13px] text-gray-400 dark:text-gray-500 tracking-wider uppercase" data-ko="작성자" data-en="Written by">작성자</span>
        <a href={`${base}/about`} class="text-[12px] sm:text-[13px] font-bold px-2.5 py-0.5 rounded-lg bg-primary/10 text-primary dark:bg-primary-light/10 dark:text-primary-light hover:bg-primary/20 dark:hover:bg-primary-light/20 transition-colors duration-200" data-ko="@범수" data-en="@Su-Beom">@범수</a>
      </div>
      <p class="text-[13px] sm:text-[14px] text-gray-500 dark:text-gray-400 leading-relaxed mb-5" data-ko={siteSettings.authorBio} data-en={siteSettings.authorBioEn}>
        {siteSettings.authorBio}
      </p>
      <div class="flex items-center justify-center sm:justify-start gap-2">
        {(siteSettings.socialLinks || []).map((link: any) => {
          const href = link.type === 'email' ? `mailto:${link.url}` : link.url;
          const label = link.label || link.type;
          return (
            <a href={href} target={link.type === 'email' ? undefined : '_blank'} rel={link.type === 'email' ? undefined : 'noopener'} class="author-social-btn" aria-label={label}>
